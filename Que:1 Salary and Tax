package com.EmlpoyeeDetails;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        String name;
        int birthdate;
        int birthmonth;
        int birthyear;
        Float monsalary;
        Float anusalary;
        int age;


        System.out.println("Enter Employee Name");
        name = sc.next();
        System.out.println("Enter Birthdate of Employee");
        birthdate = sc.nextInt();
        System.out.println("Enter Birthmonth of Employee");
        birthmonth = sc.nextInt();
        System.out.println("Enter Birthyear of Employee");
        birthyear = sc.nextInt();
        System.out.println("Enter Monthly Salary of Employee");
        monsalary = sc.nextFloat();

        anusalary = 12 * monsalary;
        age = 2020 - birthyear;

        if (anusalary > 500000)
        {
            System.out.println("The tax amount is 20%");

        }
        else if(anusalary>400000 && anusalary<500000);
        {
            System.out.println("The tax amount is 15%");

        }
        System.out.println(name);
        System.out.println(age);
        System.out.println(anusalary);


    }
}
